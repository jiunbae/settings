# Company SSH hosts - TEMPLATE
# Copy to 20-company.conf and customize

# GitHub - company account
Host github.com-company
  HostName github.com
  User git
  IdentityFile ~/.ssh/id_ed25519_company
  IdentitiesOnly yes
  IdentityAgent none
  ControlMaster no
  ControlPath none
  ControlPersist no

# Example: Dev server
# Host dev
#   HostName dev.company.com
#   User yourname
#   Port 22
#   ForwardAgent yes

# Example: Production servers
# Host prod-*
#   HostName %h.company.com
#   User deploy
#   IdentityFile ~/.ssh/id_ed25519_deploy
